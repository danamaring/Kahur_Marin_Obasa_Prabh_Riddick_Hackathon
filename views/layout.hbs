<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    {{!-- link - stylesheets --}}
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/main.css">


    {{!-- link - icons --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.7.1/css/all.css">

    {{!-- link - fonts --}}
    <link href="https://fonts.googleapis.com/css?family=Varela+Round&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oswald:400,600&display=swap" rel="stylesheet">

    {{!-- link - favicon --}}
     <link rel="shortcut icon" type="image/png" href="images/thermosecure_logo-v1_favicon.png"/>


    <title>ThermoSecurity by HouseCom</title>
</head>

{{!-- body starts --}}
<body>
    {{!-- header starts --}}
    <header>
        <h1 class="hidden">Header starts</h1>

        {{!-- logo header --}}
        <div id="logoHeader">
            <img id="monoLogo" src="images/thermosecure_logo-v2_text_right-greyscale.svg" alt="houseCom logo">
            <img id="colourLogo" src="images/thermosecure_logo-v2_text_right.svg" alt="houseCom logo">
        </div>

        {{!-- menu starts --}}
        <nav id="mainNav">
            <h2 class="hidden">Main Navigation</h2>
            <button id="button"></button>

            {{!-- menu content --}}
            <div id="burgerCon">
                <ul id="burgerMenu">
                    <li><a href="#">HOME</a></li>
                    <li><a href="#">ABOUT</a></li>
                    <li><a href="#">CONTACT US</a></li>
                </ul>

            {{!-- info section header --}}
                <section id="infoSectionHeader">
                    <h1 class="hidden">Information section footer</h1>
                    <div id="address">
                        <i class="fas fa-map-marker-alt"></i>
                        <h1>138 Dundas St. London. ON</h1>
                    </div>

                    <div id="phone">
                        <i class="fas fa-phone"></i>
                        <h1>519-647-5589</h1>
                    </div>

                    <div id="email">
                        <i class="fas fa-envelope"></i>
                        <h1>thermosecurity@housecom.com</h1>
                    </div>

                    <div id="hours">
                        <i class="fas fa-clock"></i>
                        <h1>Customer hours: 9:00 to 5:00</h1>
                    </div>
                </section>

            {{!-- social media icons menu --}}
                <div id="socialIcons_header">
                    <img src="images/twitter_icon.svg" alt="Twitter icon">
                    <img src="images/pinterest_icon.svg" alt="Pinterest icon">
                    <img src="images/amazon_icon.svg" alt="Amazon icon">
                </div>

                
            </div>

            
        </nav>

        {{!-- Hero section --}}
        <section>
            <h1 class="hidden">Hero Section</h1>

            <img id="productHero" src="images/smart_thermosystem_mockup.png" alt="ThermoSecurity device">
            <h1 id="heroHeading">{{TITLE}}</h1> 
            <p id="heroDescription">{{SUB-TITLE}}</p>
            <button class="buyNowButton">BUY NOW</button>
        </section>
    </header>

    

    {{!-- Features section --}}
    <section>
        <h1 class="hidden">Main product features</h1>

        <div id="featuresImage"></div>

            {{!-- features  description --}}
            <div id="featuresSection">

                <div id="featuresTemperature">
                    <i class="fas fa-temperature-high"></i>
                    <p>{{ICON1}}
                    </p>
                 </div>
                <div id="featuresTime">
                    <i class="fas fa-clock"></i>
                    <p>{{ICON2}}
                    </p>
                </div>

                <div id="featuresWeather">
                    <i class="fas fa-cloud"></i>
                    <p>{{ICON3}}
                    </p>
                </div>

                <div id="featuresSecurity">
                <i class="fas fa-shield-alt"></i>
                    <p>{{ICON4}}
                    </p>
                </div>

                <div id="featuresAlexa">
                    <i class="fas fa-wifi"></i>
                    <p>{{ICON5}}
                    </p>
                </div>

             </div>
    </section>

    {{!-- security section --}}
    <section id="securitySection">  
        <h1 class="hidden">ThermoSecure Safe Feature</h1>
        <img src="images/keepThemSafe.png" alt="Happy family and home camera">
        <h1 class="mainTitles">{{S_TITLE}}</h1>
         <p class="mainText">{{S_BODY}}</p>
     </section>

    {{!-- facial recognition section --}}
    <section id="facialRecognitionSection">
        <h1 class="hidden">Facial Recognition Section</h1>
         <img src="images/thermoSecurity_houseCom.png" alt="ThremoSecurity Device">
         <h1 class="facialTitle">{{R_TITLE}}</h1>
         <p class="facialText">{{R_BODY}}</p>
         <button class="buyNowButtonBlue">BUY NOW</button>
     </section>

    {{!-- Alexa section --}}
    <section id="alexaSection">
        <h1 class="hidden">Alexa Section</h1>
         <img id="alexaIMG" src="images/amazon_echo.png" alt="Amazon Echo device">
         <h1 class="mainTitlesWhite">{{A_TITLE}}</h1>
         <p class="mainTextWhite">{{A_BODY}}</p>
         <img id="alexaLogo" src="images/logo_alexaAmazon.png" alt="Alexa Amazon logo">
     </section>

    {{!-- Mobile capabilities section --}}
    <section>
        <h1 class="hidden">Mobile capabilities section</h1>
         <img id="capabilitiesIMG" src="images/Mockup_iphone.png" alt="Phone mockup">
         <h1 class="mainTitles">{{C_TITLE}}</h1>
         <p class="mainText">{{C_BODY}}</p>
         <div id="osLogos">
             <img src="images/android_logo.png" alt="Android Logo">
             <img src="images/ios_logo.png" alt="IOS Logo">
         </div>
    </section>

     {{!-- Order ThermoSecure today section --}}
    <section>
        <h1 class="hidden">Order ThermoSecure today section</h1>

         <img id="boxes" src="images/boxes_mockup_provisional.png" alt="Packaging mockup">
         <h1 class="mainTitles">{{P_TITLE}}</h1>
         <p class="mainText">{{P_BODY}}</p>
        <button class="buyNowButton">BUY NOW</button>
     </section>

    {{!-- Footer starts --}}
    <footer id="mainFooter">
        <h1 class="hidden">Main Footer</h1>

        <img id="logoFooter" src="images/thermosecure_logo-v2_text_right-knockout.svg" alt="HouseCom Logo">

        {{!-- footer navbar --}}
        <nav id="navbarFooter">
            <ul>
                <li><a href="#">HOME</a></li>
                <li><a href="#">ABOUT</a></li>
                <li><a href="#">CONTACT US</a></li>
            </ul>
        </nav>

        {{!-- info section footer --}}
        <section id="infoSectionFooter">
            <h1 class="hidden">Information section footer</h1>

            <div>
                <i class="fas fa-map-marker-alt"></i>
                <h1>{{ADDRESS}}</h1>
            </div>

            <div>
                <i class="fas fa-phone"></i>
                <h1>{{PHONE}}</h1>
            </div>

            <div>
                <i class="fas fa-envelope"></i>
                <h1>{{EMAIL}}</h1>
            </div>

            <div>
                <i class="far fa-clock"></i>
                <h1>{{WORKING_HOURS}}</h1>
            </div>
        </section>

        {{!-- social media icons footer --}}
        <div id="socialMediaFooter">
            <img src="images/twitter_icon.svg" alt="Twitter icon">
            <img src="images/pinterest_icon.svg" alt="Pinterest icon">
            <img src="images/amazon_icon.svg" alt="Amazon icon">
        </div>

        {{!-- back to top button --}}
        <div id="backToTop">
			<a href="#">
				<img src="images/arrow-circle-up-solid.svg" alt="back to top icon">
			</a>
		</div>

        {{!-- copyrights footer --}}
        <div id="footerCopyrights">
            <h1>{{COPYRIGHT}}</h1>
        </div>
    </footer>

    <script src="js/main.js"></script>
</body>
</html>